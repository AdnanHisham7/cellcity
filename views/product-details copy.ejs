<!DOCTYPE html>
<html lang="en">

<head>
    <title>Home 02</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="images/icons/favicon.png" />
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .breadcrumb-item + .breadcrumb-item::before {
            content: ">";
        }
        .product-image {
            width: 100%;
            max-height: 400px;
            object-fit: cover;
        }
        .rating {
            color: #f5c518;
        }
        .discount {
            color: #d9534f;
        }
        .stock-status {
            font-weight: bold;
        }
        .highlight-list {
            list-style-type: none;
            padding-left: 0;
        }
        .highlight-list li {
            margin-bottom: 10px;
        }
        .related-products img {
            width: 100%;
            height: auto;
        }
        .related-products .card {
            border: none;
            transition: transform 0.3s, box-shadow 0.3s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Default shadow */
        }
        .related-products .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2); /* Shadow on hover */
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">CellCity</a>
        <!-- Add other navbar content here -->
    </nav>

    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb" class="container mt-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Shop</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%= product.productName %></li>
        </ol>
    </nav>

    <!-- Product Details -->
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <!-- Product Image -->
                <img src="<%= product.productImages[0].replace('uploads', '') %>" alt="<%= product.productName %>" class="img-fluid product-image">
            </div>
            <div class="col-md-6">
                <h1><%= product.productName %></h1>
                <div class="rating">
                    <% for (let i = 0; i < Math.round(product.rating); i++) { %>
                        <i class="fa fa-star"></i>
                    <% } %>
                    <% for (let i = Math.round(product.rating); i < 5; i++) { %>
                        <i class="fa fa-star-o"></i>
                    <% } %>
                </div>
                <p class="lead">â‚¹<%= product.price %></p>
                <% if (product.discount) { %>
                    <p class="discount">Discount: <%= product.discount %>% Off</p>
                <% } %>
                <p>Stock: <span class="stock-status"><%= product.stock > 0 ? 'In Stock' : 'Out of Stock' %></span></p>
                <% if (product.stock === 0) { %>
                    <p class="text-danger">Sold Out</p>
                <% } %>
                <button class="btn btn-primary" <% if (product.stock === 0) { %>disabled<% } %> Add to Cart</button>
                <p><strong>Highlights:</strong></p>
                <ul class="highlight-list">
                    <% product.highlights.forEach(highlight => { %>
                        <li><%= highlight %></li>
                    <% }) %>
                </ul>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="mt-5">
            <h4>Reviews</h4>
            <% if (product.reviews.length === 0) { %>
                <p>No reviews yet.</p>
            <% } else { %>
                <% product.reviews.forEach(review => { %>
                    <div class="review mb-3">
                        <div class="rating">
                            <% for (let i = 0; i < Math.round(review.rating); i++) { %>
                                <i class="fa fa-star"></i>
                            <% } %>
                            <% for (let i = Math.round(review.rating); i < 5; i++) { %>
                                <i class="fa fa-star-o"></i>
                            <% } %>
                        </div>
                        <p><strong><%= review.author %></strong></p>
                        <p><%= review.comment %></p>
                    </div>
                <% }) %>
            <% } %>
        </div>

        

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p>&copy; 2024 E-Commerce Site. All Rights Reserved.</p>
            <p>Follow us on 
                <a href="#">Facebook</a>, 
                <a href="#">Twitter</a>, 
                <a href="#">Instagram</a>
            </p>
        </div>
    </footer>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/elevatezoom/3.0.8/jquery.elevatezoom.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>

</html>
