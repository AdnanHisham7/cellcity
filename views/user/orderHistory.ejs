                        let lastFailedOrder = null;

                        // Find the last updated order with the required conditions
                        orders.forEach(order => {
                            if (order.paymentStatusFailed && order.status === 'Failed') {
                                if (!lastFailedOrder || new Date(order.updatedAt) > new Date(lastFailedOrder.updatedAt)) {
