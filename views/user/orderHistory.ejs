                                    <% const discount = order.coupon && order.coupon.percentage ? (order.totalAmount * order.coupon.percentage / 100) : 0; %>
                                    <% const finalAmount = order.amountAfterDiscount || (order.totalAmount - discount); %>
                                    <td>₹ <%= order.deliveryCharge ? (finalAmount + order.deliveryCharge).toFixed(2) : finalAmount.toFixed(2) %></td>
