                                            const failureTime = new Date(lastFailedOrder.updatedAt);
                                            const timeDifference = Math.abs(currentTime - failureTime);
                                            const hoursDifference = timeDifference / (1000 * 60 * 60); // convert ms to hours
                                        %>
                                    
                                        <% if (hoursDifference <= 24) { %>
                                            <input type="hidden" id="orderId" value="<%= lastFailedOrder._id %>">
                                            <input type="hidden" id="amount" value="<%= finalAmount %>">
                                            <a href="javascript:void(0);" class="btn btn-sm retryButton" 
                                               data-order-id="<%= lastFailedOrder._id %>" data-amount="<%= finalAmount %>" onclick="return confirm('Are you sure you want to Retry this order?')">Retry</a>
                                        <% } %>
                                    
                                        <% } %>
                                    
