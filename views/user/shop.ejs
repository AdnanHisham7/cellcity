    <style>

        body {
            background-color: #1c1e20;
            color: white;
        }
        .product-card {
            padding: 20px 0px;
            background-color: #1c1e20;
            /* margin-bottom: 20px; */
            transition: all ease 0.5s;
        }

        .product-card:hover {
            background-color: #313131;
        }

        .product-card .text-danger{
            color: rgb(208, 19, 19) !important;
        }

        .product-image {
            width: 100%;
            max-width: 280px;
            height: auto;
            object-fit: cover !important;
        }
        .product-image-container {
            position: relative;
            padding: 5px; /* Small padding to give the image some breathing space */
            border: 1px solid rgba(255, 255, 255, 0.1); /* Subtle, professional border */
            /* border-radius: 8px; */
            background-color:   #ffffff; 
            /* background-color: #2a2a2a;  */
            display: flex; /* Ensure the image is centered */
            justify-content: center; /* Center the image horizontally */
            align-items: center; /* Center the image vertically */
        }

        .wishlist-icon {
            position: absolute;
            top: 10px;  /* Adjust based on your preference */
            right: 10px;  /* Adjust based on your preference */
            font-size: 24px;  /* Adjust size as per your need */
            color: #ff0000;  /* Red color for the heart */
            cursor: pointer;  /* Cursor changes to pointer to indicate it's clickable */
            z-index: 10;  /* Ensure it stays on top of the image */
        }

        /* Hover effect for wishlist icon */
        .wishlist-icon:hover {
            color: #D9B600;  /* Change color on hover to match your theme */
        }

        .product-title {
            color: white;
            font-size: 1.2rem;
            font-weight: bold;
        }
        .product-rating {
            color: #ffc107;
        }
        .product-price {
            color: white;
            font-size: 1.5rem;
            font-weight: bold;
        }
        .product-original-price {
            text-decoration: line-through;
            color: #6c757d;
        }
        .product-unavailabe{
            color: #ce2e02;
        }
        .product-discount {
            color: #28a745;
        }

        .product-specs {
            list-style-type: disc; 
            font-size: 0.87rem;
            padding-left: 20px; 
            color: #ccc; 
        }

        .product-specs li {
            margin-bottom: 2px;
        }

        .product-divider {
            border: 0;
            height: 1px;
            background-color: rgba(255, 255, 255, 0.1);
            margin: 20px 0;
        }


        .search-container {
            width: 100%;
            margin-left: 280px;
            max-width: 1000px;
            padding: 20px;
            background-color: #1c1e20;
            border-radius: 8px;
            margin-top: -80px;
            /* box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); */
        }

        .search-box {
            width: 100%;
        }

        .search-input {
            color: rgba(255, 255, 255, 0.763);
            background-color: #1c1e20;
            border: 1px solid #585858;
            border-radius: 8px 0 0 8px;
            padding: 10px 15px;
            font-size: 16px;
            outline: none;
            transition: border 0.3s;
            width: 100%;
        }

        .search-input:focus {
            border-color: #D9B600;
        }

        .btn-search {   
            background-color: #D9B600;
            border: none;
            color: white !important;
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 0 8px 8px 0;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

        .btn-search:hover {
            background-color: #D9B600;
        }

        .btn-search i {
            margin-right: 0;
        }

        .results-count {
            margin-top: 15px;
        }

        .filter-applied{
            background-color: rgba(138, 138, 138, 0.212);
            padding: 8px 18px;
            border-radius: 20px;
            margin-left: 40px;
            margin-top: 10.1px;
            font-size: 13px;
            color: #ffffff;
            font-weight: 400; 
        }

        .results-text {
            font-size: 18px;
            color: #ffffff;
            font-weight: 800;
        }

        /* Hide the default checkbox */
        .to-dark input[type="checkbox"] {
            appearance: none;
            -webkit-appearance: none;
            width: 16px;
            height: 16px;
            border: 1px solid #d9b5008e; /* Border color for unchecked state */
            background-color: #1c1e20; /* Background color for unchecked state */
            border-radius: 3px; /* Optional: Rounded corners */
            position: relative;
        }

        /* Checked state with custom tick mark */
        .to-dark input[type="checkbox"]:checked {
            background-color: #d9b500d2; /* Background color for checked state */
            border: none;
        }

        .to-dark input[type="checkbox"]:checked::before {
            content: "\2713"; /* Unicode character for check mark */
            font-size: 12px;
            color: #1c1e20; /* Color of the tick mark */
            position: absolute;
            top: 0;
            left: 2px; /* Adjust the position of the check mark */
        }


       .to-dark select, input[type="checkbox"] {
            background-color: #1c1e20;
            color: #ffffff;
        }

        .to-dark select option {
            background-color: #1c1e20;
            color: #ffffff;
        }

        .to-dark .card {
            background-color: #1c1e20;
            color: #ffffff;
        }

        .to-dark .card-heading a {
            color: #D9B600; /* Highlight accent color for clickable items */
        }

        .to-dark .card-heading a:hover {
            color: #D9B600; /* Highlight accent color for clickable items */
        }

        .to-dark .card-body {
            background-color: #1c1e20;
            color: #ffffff;
        }

        .to-dark .shop__sidebar__tags a {
            /* background-color: #D9B600;  */
            color: #1c1e20;
            padding: 5px 10px;
            border-radius: 4px;
        }

        .to-dark .shop__sidebar {
            background-color: #1c1e20;
            color: #ffffff;
            border-radius: 5px;
            padding: 20px;
            border: 1px solid #d9b50020;
        }

        .to-dark .shop__sidebar__tags a:hover {
            background-color: #ffffff;
            color: #1c1e20;
        }

        .to-dark ul li {
            margin-bottom: 10px;
        }

        .to-dark ul li input[type="checkbox"] {
            margin-right: 10px;
        }

        .to-dark ul li label {
            color: #ffffff;
        }

        .to-dark .sorting-options {
            background-color: #1c1e20;
            color: #ffffff;
            /* border: 1px solid #D9B600; */
            padding: 10px;
            border-radius: 5px;
        }
        .to-dark .sorting-options .list{
            background-color: #2f2f2f;
            color: #ffffff !important;
            /* border: 1px solid #D9B600; */
                border-radius: 5px;
        }

        .to-dark .sorting-options .disabled{
            background-color: #2f2f2f !important;
            color: #7d7d7d !important;
            /* border: 1px solid #D9B600; */
            padding-top: 0px;
            padding-bottom: 0px;
            margin: 0;
            border-radius: 5px;
        }
        
        /* select tag styling */
        .to-dark .current{
            color: rgb(255, 255, 255);
            background-color: #1c1e20;
        }

        .to-dark .nice-select{
            color: rgb(255, 255, 255);
            background-color: #201c1c;
        }

        .to-dark .option{
            color: rgb(255, 255, 255);
        }

        .to-dark .option:hover{
            background-color: rgb(63, 63, 63);
            color: rgb(255, 255, 255);
        }

        /* Pagination container */
        .pagination-container {
            background-color: #1c1e20 !important; /* Dark background */
            padding: 10px !important;
            border-radius: 8px !important;
        }

        /* Pagination links */
        .pagination .page-link {
            background-color: #1c1e20 !important; /* Dark background for links */
            color: #ffffff !important; /* White text */
            border: 1px solid #D9B600 !important; /* Accent color for borders */
            padding: 8px 12px !important;
            margin: 0 5px !important;
            border-radius: 4px !important;
            transition: background-color 0.3s ease;
        }

        /* Hover effect for pagination links */
        .pagination .page-link:hover {
            background-color: #D9B600 !important; /* Accent color on hover */
            color: #1c1e20 !important; /* Dark text on hover */
            border-color: #D9B600 !important; /* Keep border consistent */
        }

        /* Active page */
        .pagination .page-item.active .page-link {
            background-color: #D9B600 !important; /* Accent color for active page */
            color: #1c1e20 !important; /* Dark text for active page */
            border-color: #D9B600 !important;
        }

        /* Disabled pagination items */
        .pagination .page-item.disabled .page-link {
            background-color: #333 !important; /* Slightly lighter dark for disabled items */
            color: #777 !important; /* Disabled text color */
            border-color: #444 !important; /* Disabled border */
        }

        /* Pagination container alignment */
        .pagination {
            justify-content: center !important;
        }

        @media (max-width: 992px){
            .search-container {
                margin-left: 0px;
            }
        }
    </style>
</head>

<body>
