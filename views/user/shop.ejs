    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="col-lg-3">

            </div>
            <div class="col-lg-9">
                <div class="search-container row d-flex flex-column align-items-center mb-2">
                    <div class="search-box">
                        <form action="/shop" method="GET" class="d-flex">
                            <input type="text" name="search" class="form-control search-input"
                                placeholder="Search for products..." value="<%= query.search || '' %>">
                            <button type="submit" class="btn btn-search">
                                <i class="fa fa-search"></i>
                            </button>
                        </form>
                    </div>
                </div>
                <div class="d-flex" style="margin-left: 300px;">
                    <div class="results-count mt-3">
                        <span class="results-text">
                            <% if(databaseVariants.length != totalResults){ %>
                                <%= totalResults %> Results found
                            <% } %>
                        </span>
                    </div>
                    <div class="filter-applied" id="filter-applied-container" style="display: none;">
                        <div id="filter-applied">
                           
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="container">
            <div class="row">

                <!-- Sidebar Section -->
                <div class="col-lg-3">
                     <div class="to-dark">Sort By:
                        <div class="sorting-options" style="margin-bottom: 100px;">
                            <form id="sorting-form" action="#" method="GET"
                                onsubmit="event.preventDefault(); submitSortingForm();">
                                <!-- <label for="sort-by">Sort By:</label> -->
                                <select id="sort-by" name="sortBy" onchange="submitSortingForm()">
                                    <option value="" selected disabled>Choose an Option</option>
                                    <!-- Default disabled option -->
                                    <option value="price-asc">Price: Low to High</option>
                                    <option value="price-desc">Price: High to Low</option>
                                    <option value="name-asc">Product Name: A to Z</option>
                                    <option value="name-desc">Product Name: Z to A</option>
                                </select>
                            </form>
                        </div>

                        <div class="shop__sidebar">
                            <div class="shop__sidebar__accordion">
                                <div class="accordion" id="accordionExample">
                                    <!-- Brands Filter -->
                                    <div class="card mb-3">
                                        <div class="card-heading">
                                            <a data-toggle="" data-target="">Brands</a>
                                        </div>
                                        <div id="collapseTwo" class="collapse show" data-parent="#accordionExample">
                                            <div class="card-body">
                                                <% const selectedBrandsArray=(query.selectedBrands && typeof
                                                    query.selectedBrands==='string' ) ? JSON.parse(query.selectedBrands) :
                                                    []; %>

                                                    <form id="filter-form" action="#" method="GET"
                                                        onsubmit="event.preventDefault(); submitFilterForm();">
                                                        <ul>
                                                            <li>
                                                                <input type="checkbox" name="brands" value="all"
                                                                    onchange="submitFilterForm()"> All Brands
                                                            </li>
                                                            <% brands.forEach(brand=> { %>
                                                                <li>
                                                                    <input type="checkbox" name="brands"
                                                                        value="<%= brand._id %>"
                                                                        onchange="submitFilterForm()"
                                                                        <%=selectedBrandsArray.includes(brand._id.toString())
                                                                        ? 'checked' : '' %> />
                                                                    <%= brand.brandName %>
                                                                </li>
                                                                <% }) %>

                                                        </ul>
                                                    </form>

                                            </div>
                                        </div>
                                    </div>


                                    <!-- Price Filter -->
                                    <div class="card mb-3">
                                        <div class="card-heading">
                                            <a data-toggle="" data-target="">Filter Price</a>
                                        </div>
                                        <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                                              <div class="card-body">
                                                <div class="shop__sidebar__price">
                                                    <ul>
                                                        <li><input type="checkbox" name="priceRange" value="0-50"
                                                                onchange="priceFilter()"> $0.00 - $50.00</li>
                                                        <li><input type="checkbox" name="priceRange" value="50-100"
                                                                onchange="priceFilter()"> $50.00 - $100.00</li>
                                                        <li><input type="checkbox" name="priceRange" value="100-150"
                                                                onchange="priceFilter()"> $100.00 - $150.00</li>
                                                        <li><input type="checkbox" name="priceRange" value="150-200"
                                                                onchange="priceFilter()"> $150.00 - $200.00</li>
                                                        <li><input type="checkbox" name="priceRange" value="200-250"
                                                                onchange="priceFilter()"> $200.00 - $250.00</li>
                                                        <li><input type="checkbox" name="priceRange" value="250+"
                                                                onchange="priceFilter()"> $250.00+</li>
                                                    </ul>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <!-- Tags Filter -->
                                    <div class="card">
                                        <div class="card-heading">
                                            <a data-toggle="" data-target="">Tags</a>
                                        </div>
                                        <div id="collapseSix" class="collapse show" data-parent="#accordionExample">
                                            <div class="card-body">
                                                <div class="shop__sidebar__tags">
                                                    <a href="#">Gaming</a>
                                                    <a href="#">High Performance</a>
                                                    <a href="#">Battery Life</a>
                                                    <a href="#">Quality Camera</a>
                                                    <a href="#">256GB ROM</a>
                                                    <a href="#">16GB RAM</a>
                                                    <a href="#">Refresh Rate</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Products Section -->
                <div class="col-lg-9">
                    <div class="shop__product__option">
                        <!-- Product Sort & Filter (if needed) -->
                    </div>
                    <div id="product-list">
                        <% variants.forEach(variant=> { %>
                            <div class="product-card">
                                <div class="row ml-4">
                                    <div class="col-4 product-image-container">
                                        <img src="<%= variant.variantImages[0]?.replace('uploads', '') %>" alt="Product Image" class="product-image">

                                        <!-- wishlist -->
                                        <% if(user != null) { %>
                                            <% const isInWishlist = user.wishlist.some(item => item._id.toString() === variant._id.toString()); %>
                                            
                                            <form action="/wishlist/<%= isInWishlist ? 'remove' : 'add' %>/<%= variant._id %>" method="POST" class="wishlist-form" id="wishlist-form">
                                                <i class="<%= isInWishlist ? 'fa-solid fa-heart' : 'fa-regular fa-heart' %> wishlist-icon" 
                                                    style="cursor: pointer;"></i>
                                            </form>
                                        <% } else { %>
                                            <form action="/login" method="GET" class="wishlist-form" id="wishlist-form">
                                                <i class="fa-regular fa-heart wishlist-icon" style="cursor: pointer;"></i>
                                            </form>
                                        <% } %>
                                        <!-- wishlist end -->




                                    </div>
                                    <div class="col-8">
                                        <a href="/shop/product/<%= variant._id %>" class="product-link-wrapper">
                                            <h2 class="product-title"><%= variant.productId.productName %> (<%= variant.color %>, <%=
                                                variant.storage %>)</h2>
                                            <div class="product-rating">
                                                <span>★★★★☆</span>
                                                <span class="text-muted">(150 Reviews) | </span>
                                                <% if(variant.stocks == 0){ %>
                                                    <span class="text-danger ml-2">Insufficient Stock</span>
                                                <% }else{ %>
                                                    <span class="text-success ml-2">In Stock</span>
                                                <% } %>
                                            </div>
                                            <div class="mt-2">
                                                <% if(variant.status === 'active' && variant.bestDiscount == 0){ %>
                                                    <span class="product-price">₹<%= variant.price %></span>
                                                <% }else if(variant.status === 'active'){ %>
                                                    <span class="product-price">₹<%= variant.finalPrice %></span>
                                                    <span class="product-original-price ml-2">₹<%= variant.price %></span>
                                                    <span class="product-discount ml-2"><%= variant.bestDiscount %>% off</span>
                                                <% }else{ %>
                                                    <span class="product-price">₹<%= variant.price %></span>
                                                    <span class="product-unavailabe ml-2">Unavailable</span>
                                                <% } %>
                                                
                                            </div>
                                            <ul class="product-specs mt-3">
                                                <% let highlightsArray = variant.productId.highlights.split(','); %>
                                                <% highlightsArray.forEach(highlight => { %>
                                                    <li><%= highlight.trim() %></li>
                                                <% }); %>
                                            </ul>
                                            
                                            <div class="row mt-4 ml-2">
                                                <% 
                                                const productLink = `http://yourwebsite.com/shop/product/${variant._id}`; 
                                                const productDetails = variant.bestDiscount > 0 
                                                    ? `🎉 Amazing Offer! Check out the ${variant.productId.productName} (${variant.color}, ${variant.storage}) now with a fantastic **${variant.bestDiscount}% off!** 🌟 Grab it for just ₹${variant.finalPrice} and don't miss out! 👉 ${productLink}`
                                                    : `🚀 Discover the ${variant.productId.productName} (${variant.color}, ${variant.storage}) for just ₹${variant.price}! Don't wait, elevate your experience today! 👉 ${productLink}`;

                                                const whatsappShareUrl = `https://api.whatsapp.com/send?text=${encodeURIComponent(productDetails)}`; 
                                                %>
                                                
                                                <a href="<%= whatsappShareUrl %>" target="_blank" class="primary-btn-shop">
                                                    <i class="fa-solid fa-share-nodes"></i>&nbsp;Share Product
                                                </a>
                                                <form id="add-to-cart-form" action="/cart/add" method="POST">
                                                    <input type="hidden" id="variantId" name="variantId" value="<%= variant._id %>">
                                                    <button class="primary-btn-shop-yellow ml-2" type="submit">
                                                        <i class="fa-solid fa-cart-shopping"></i>&nbsp; ADD TO CART
                                                    </button>
                                                </form>
                                            </div>
                                            
                                    </a>
                                    </div>
                                    
                                </div>
                            </div>
                            <hr class="product-divider">

                        <% }) %>
                    </div>
                    <!-- pagination -->
                    <div class="pagination-container mt-4">
                        <nav aria-label="Page navigation">
