                <% if(variants){ %>
                <div class="row product__filter ">
                    <% 
                    const displayedProductIds = new Set(); // Initialize a Set to track displayed productIds
                    variants.forEach(variant => { 
                        const currentDate = new Date();
                        const createdDate = new Date(variant.createdAt);
                        const isNew = (currentDate - createdDate) <= 1 * 24 * 60 * 60 * 1000; // Check if created within last 1 day(s)
                        const isBest = bestSellingProducts.some(product => product._id.equals(variant.productId._id)); // Check if the variant is a best-seller
                        
                        // Check if the productId has already been displayed
                        if (!displayedProductIds.has(variant.productId._id)) {
                            displayedProductIds.add(variant.productId._id); // Add the productId to the Set
            
                            let classNames = 'col-lg-3 col-md-4 col-sm-6 mix';
                            if (isNew) classNames += ' new';
                            if (isBest) classNames += ' best';
                    %>
                    <div class="mb-4 <%= classNames %>">
                        <a href="/shop/product/<%= variant._id %>">
                            <div class="product-card h-100">
                                <img class="img-fluid" src="<%= variant.variantImages[0].replace('uploads', '') %>" alt="POCO M6 Pro 5G" class="product-image w-100">
                                <% if(variant.productId){ %>
                                <div class="p-3">
                                    <h5 class="product-name"><%= variant.productId.productName %>  (<%= variant.color %>,<%= variant.storage %>)</h5>
                                    <div class="row">
                                        <% if(variant.bestDiscount == 0){ %>
                                            <p class="product-price mb-0 ml-3">₹<%= variant.finalPrice.toFixed(2) %></p>
                                            
                                        <% }else{ %>
                                            <p class="product-price mb-0 ml-3">₹<%= variant.finalPrice.toFixed(2) %></p>
                                            <p class="mb-0">
                                                <span class="original-price ml-3">₹<%= variant.price %></span>
                                                <span class="discount ml-1"><%= variant.bestDiscount %>% off</span>
                                            </p>
                                        <% } %>
                                        
                                    </div>
                                </div>
                                <% } %>
                            </div>
                        </a>
                    </div>
                    <% 
                            } // End of if condition checking for duplicate productId
                        }); // End of forEach loop
                        %>
                </div>
            </div>
                <% } %>
    
