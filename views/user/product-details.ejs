        .related-products .related-products-heading{
            color: white;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .related-products .product-card {
            border: 1px solid #dddddd6f;
            max-width: 240px;
            border-radius: 8px;
            overflow: hidden;
            transition: all 0.3s ease;
        }
