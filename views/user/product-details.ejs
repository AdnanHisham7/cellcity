    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            box-sizing: border-box;
        }


        .breadcrumb-item+.breadcrumb-item::before {
            content: ">";
        }        


        .product-unavailabe{
            font-size: 1rem;
        }

        .product-image-large {
            max-width: 400px;
            max-height: 400px;
            border: 1px solid #ddd;
            padding: 10px;
            background: #f9f9f9;
            overflow: hidden;
        }

        .product-image-large img {
            transition: transform 0.5s ease-in-out;
            /* Smooth transition on hover and zoom out */
            cursor: zoom-in;
            /* Change cursor to zoom icon on hover */
        }

        .product-image-large img:hover {
            transform: scale(1.3);
            /* Adjust the scale as needed */
            cursor: zoom-in;
            /* Change cursor to zoom-out icon when zoomed in */
        }

        .product-subimages {
            width: 80px;
            height: 80px;
            object-fit: cover;
            cursor: pointer;
            border: 1px solid #ddd;
            padding: 5px;
            background: #fff;
        }

        .product-subimages.active {
            border-color: #007bff;
        }

        .add-review-heading{
            color: white;
            font-weight: bold;
        }
        
        body {
            background-color: #232323;
            color: #ffffff !important;
        }
        .product-container {
            background-color: #323232;
            padding: 50px 30px;
        }
        .product-image-container {
            position: relative;
            padding: 5px;
